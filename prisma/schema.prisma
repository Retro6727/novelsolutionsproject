generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-1.0.x"]
}

datasource db {
  provider = "postgresql"
}

model Products {
  id            Int      @id @default(autoincrement())
  name          String
  category      String
  subcategory   String
  price         Float
  stock         Int
  code          String   @unique
  image         String?
  description   String?
  specifications String? // JSON string containing custom specifications
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model ContactInquiry {
  id        Int      @id @default(autoincrement())
  name      String
  email     String
  phone     String?
  company   String?
  subject   String
  message   String
  status    String   @default("new") // new, replied, resolved
  emailSent Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
